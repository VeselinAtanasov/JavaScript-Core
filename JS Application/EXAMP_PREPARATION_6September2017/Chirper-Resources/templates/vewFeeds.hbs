{{> header }}
<section id="viewFeed">
    <div class="content">
        <div class="chirper">

            <h2 class="titlebar">{{username}}</h2>

            <form id="formSubmitChirp" class="chirp-form" method="post" action="#/createChirp">
                <textarea name="text" class="chirp-input"></textarea>
                <input class="chirp-submit" id="btnSubmitChirp" value="Chirp" type="submit">
            </form>

            <div id="userStats" class="user-details">
                <span>{{chirpsNumber}} chirps</span> | <span>{{following}} following</span> | <span>{{followers}} followers</span>
            </div>
        </div>
        <div id="chirps" class="chirps"><h2 class="titlebar">Chirps</h2>
            {{#each feeds}}
         {{> article}}
            {{else}}
                <article class="chirp">
                    <p>No chirps in databaseâ€™</p>
                </article>
            {{/each}}
        </div>
    </div>
</section>
{{> footer}}